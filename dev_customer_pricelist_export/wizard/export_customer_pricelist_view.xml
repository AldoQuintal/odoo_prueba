<odoo>
    <record id="form_dev_customer_pricelist_export" model="ir.ui.view">
        <field name="name">form.dev.customer.pricelist.export</field>
        <field name="model">export.product.pricelist</field>
        <field name="arch" type="xml">
            <form string="Export Customer Pricelist">
                <group>
                    <group>
                        <field name="partner_id" context="{'res_partner_search_mode': 'customer'}" options="{'no_create': True, 'no_quick_create': True, 'no_open': True, 'no_create_edit': True}"/>
                        <field name="product_category_id" options="{'no_create': True, 'no_quick_create': True, 'no_open': True, 'no_create_edit': True}"/>
                    </group>
                    <group>
                        <field name="pricelist_ids" widget="many2many_tags" options="{'no_create': True, 'no_quick_create': True, 'no_open': True, 'no_create_edit': True}"/>
                    </group>
                </group>
                <footer>
                    <button string="Export Pricelist" name="export_pricelist" type="object" class="oe_highlight" />&#160;&#160;
                    <button string="Close Window" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_dev_customer_pricelist_export" model="ir.actions.act_window">
        <field name="name">Export Pricelist</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">export.product.pricelist</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="form_dev_customer_pricelist_export"/>
        <field name="target">new</field>
    </record>

    <menuitem name="Export Customer Pricelist"
              id="menu_dev_customer_pricelist_export"
              parent="sale.menu_sale_report"
              sequence="0"
              action="action_dev_customer_pricelist_export"/>
</odoo>
