<?xml version="1.0"?>
<odoo>
    <!--Email template -->
    <record id="dev_export_customer_pricelist" model="mail.template">
        <field name="name">Customer Pricelist</field>
        <field name="email_from">{{(object.company_id.email and '%s &lt;%s&gt;' % (object.company_id.name, object.company_id.email) or '')}}</field>
        <field name="subject">{{object.company_id.name}} Order (Ref {{object.name or 'n/a' }})</field>
        <field name="partner_to">{{object.id}}</field>
        <field name="model_id" ref="base.model_res_partner"/>
        <field name="auto_delete" eval="False"/>
        <field name="body_html" type="html">
            <div style="margin: 0px; padding: 0px;">
                <p style="margin: 0px; padding: 0px; font-size: 13px;">
                    Dear <t t-out="object.name"></t>
                    
                    <br/><br/>
                    Here is in attachment <strong>Customer Pricelist</strong>
                    from <span t-esc="object.company_id and object.company_id.name or ''"/>
                    <br/><br/>
                    Best regards,
                </p>
            </div>
        </field>
     </record>
</odoo>
        
        
        
      
        
        
    
