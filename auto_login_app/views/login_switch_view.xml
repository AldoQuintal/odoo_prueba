<?xml version="1.0" encoding="UTF-8"?>
<odoo>


    <record id="login_app_wizard_form" model="ir.ui.view">
        <field name="name">login.app.wizard.form</field>
        <field name="model">login.app.wizard</field>
        <field name="arch" type="xml">
            <form string="Auto Login">
                <group>
                    <group>
                        <field name="name"/>
                    </group>
                </group>
            </form>
        </field>
    </record>


    <record id="login_app_menu" model="ir.actions.act_window">
        <field name="name">Admin</field>
        <field name="res_model">login.app.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="login_app_wizard_form"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Sin eventos
            </p>
        </field>
    </record>

    <menuitem id="login_switch_menu" 
    name="Login" 
    action="login_app_menu"
    web_icon="auto_login_app,static/description/icon.png"/>


</odoo>